    rdfs:label "DIAMOND Project" ;
    skos:prefLabel "Ontology representing all entities of the DIAMOND project" .


# ----> Instances of WPs <----
diam:WP1 rdf:type diam:WorkPackage ;
    diam:partOf diam:Diamond ;
    diam:gathersCompetence diam:Containerization , 
                           diam:WebDevelopment ,
                           diam:AIApproaches ,
                           diam:GuixPackaging ,
			   diam:MOF ;
    diam:usesTool diam:Apptainer , diam:Guix ;
    diam:produces diam:DIAMONDWebpage , diam:LAMMPS , 
                  diam:QuantumESPRESSO , diam:Abinit ,
                  diam:Zset , diam:FreeFEM ,
                  diam:OpenCalphad , diam:Neper ,
                  diam:PLUMED , diam:Gmsh ,
                  diam:ZeoPlusPlus , diam:RASPA2 ,
                  diam:OpenDiS , diam:Wannier90 ,
                  diam:NWChem , diam:FEniCS ,
                  diam:CP2K , diam:n2p2 ,
                  diam:DFTBPlus , diam:XTB ,
                  diam:GaTewAY , diam:Ovito ,
                  diam:ParaView , diam:VESTA ,
                  diam:VMD , diam:XCrySDen ;
                  diam:ledBy diam:SIMAP ;
    diam:coLedBy diam:ILM , diam:IMPMC ;
    rdfs:comment "Development of the code and workflow platform for the DIAMOND project." ;
    skos:prefLabel "WP1" .

diam:WP2 rdf:type diam:WorkPackage ;
    diam:partOf diam:Diamond ;
    diam:gathersCompetence diam:DatabaseInfrastructure , 
                           diam:LargeScaleWorkflows ,
                           diam:AIApproaches ,
                           diam:MetadataStandardization ,
                           diam:FAIRDataHandling ,
                           diam:WorkflowOrchestration ;
