    diam:produces diam:DiamondDBInfrastructure ;
    diam:ledBy diam:CEA-MEM ;
    diam:coLedBy diam:CEA-LIST ;
    rdfs:comment "Design and implementation of data management infrastructure for the DIAMOND project" ;
    skos:prefLabel "WP2" .


diam:WP3 rdf:type diam:WorkPackage ;
    diam:partOf diam:Diamond ;
    diam:gathersCompetence diam:MLIP ,
                           diam:AIApproaches ,
                           diam:AIBasedModelling ,
			   diam:AiidaWorkflows ,
